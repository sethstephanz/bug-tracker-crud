<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bug Tracker</title>
    <style>
      body {
        margin: 0;
      }
      .High {
        background-color: red;
        border: 2px black solid;
        width: 100%;
      }
      .Medium {
        background-color: yellow;
        border: 2px black solid;
        width: 100%;
      }
      .Low {
        background-color: lightblue;
        border: 2px black solid;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <h1>Bug Tracker</h1>
    <% for(let problem of problems) { %>
    <div class="problem <%= problem.severity %>">
      <a href="/problems/<%= problem._id %>"> <%= problem.name %> </a><br />
      Severity: <%= problem.severity %> <br />
      Assigned To: <%= problem.assignedTo %> <br />
      Start Date: <%= problem.startDate %> <br />
      Due Date: <%= problem.dueDate %>
    </div>
    <% } %>
  </body>
</html>
